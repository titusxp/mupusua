			<option value="green">green</option>
			<option value="grey">grey</option>
			<option value="multi">black</option>
		</param>
			
		<param name="Rozmiar_Strony" type="radio" default="standard" label="Page Size" description="Select a page size">
			<option value="szeroka">1280px</option>
			<option value="standard">1152px</option>
			<option value="waska">1024px</option>
		</param>
			
		<param name="Rozmiar_Czcionki" type="radio" default="standard" label="Font Size" description="Select a font size">

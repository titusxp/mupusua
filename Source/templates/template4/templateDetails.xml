	<params>
		<param name="@spacer" type="spacer" default="Settings Menu" label="" description="" />
		<param name="Nazwa_Menu" type="text" default="mainmenu" label="Menu" description="Select the main menu" />
		<param name="Rodzaj_Menu" type="radio" default="1" label="Type menu" description="Select the type of menu">
			<option value="1">suckerfish</option>
			<option value="2">mootools - fade</option>
			<option value="3">mootools - scroll</option>
		</param>
			
		<param name="@spacer" type="spacer" default="" label="" description="" />
			
		<param name="@spacer" type="spacer" default="Tools" label="" description="" />
		<param name="Pokaz_Narzedzia" type="list" default="0" label="Page Tools" description="Show / hide Tools">
			<option value="0">show all</option>
			<option value="1">show the color</option>
			<option value="2">show page size</option>
			<option value="3">show font size</option>
			<option value="4">show the color and size of the page</option>
			<option value="5">show the color and font size</option>
			<option value="6">show the page size and font size</option>
			<option value="7">hide all</option>
		</param>
			
